<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/GoodHealthHospital</property>
    <property name="hibernate.connection.username">good</property>
    <property name="hibernate.connection.password">good</property>
    <mapping resource="com/pojo/classes/Beds.hbm.xml"/>
    <mapping resource="com/pojo/classes/Ward.hbm.xml"/>
    <mapping resource="com/pojo/classes/Laboratory.hbm.xml"/>
    <mapping resource="com/pojo/classes/Patientdetails.hbm.xml"/>
    <mapping resource="com/pojo/classes/Pharmacy.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
